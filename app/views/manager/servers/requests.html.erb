<div class="container">
  <div class="row">
    <h2> Server Requests </h2>
    <% @server_requests.each do |request| %>
      <div class="col-md-4 col-md-offset-4 card">
        <b>Server Name:</b> <%= request.server_name %>
        <br>
        <%= link_to 'Accept Server',
                    manager_accept_request_path(request),
                    class: 'btn btn-default pull-right', method: :post %>
      </div>
    <% end %>
  </div>
</div>
