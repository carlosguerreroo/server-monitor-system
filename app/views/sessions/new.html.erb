<div class="container">
  <div class="row">
    <div class="col-md-5 col-md-offset-4">
      <h1>Log in</h1>
        <%= simple_form_for :user, url: sessions_path do |f| %>
          <%= f.input :username %>
          <%= f.input :password %>
          <%= f.button :submit %>
        <% end %>
    </div>
  </div>
</div>
